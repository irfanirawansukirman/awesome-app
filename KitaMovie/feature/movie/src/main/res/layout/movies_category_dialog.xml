<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="@dimen/dimens_16dp"
        android:paddingTop="@dimen/dimens_12dp"
        android:paddingRight="@dimen/dimens_16dp"
        android:paddingBottom="@dimen/dimens_12dp"
        android:text="@string/title_popular"
        android:textColor="@color/uiBlack"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUpcoming"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="@dimen/dimens_16dp"
        android:paddingTop="@dimen/dimens_12dp"
        android:paddingRight="@dimen/dimens_16dp"
        android:paddingBottom="@dimen/dimens_12dp"
        android:text="@string/title_upcoming"
        android:textColor="@color/uiBlack"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPopular" />

    <TextView
        android:id="@+id/tvTopRated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="@dimen/dimens_16dp"
        android:paddingTop="@dimen/dimens_12dp"
        android:paddingRight="@dimen/dimens_16dp"
        android:paddingBottom="@dimen/dimens_12dp"
        android:text="@string/title_top_rated"
        android:textColor="@color/uiBlack"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUpcoming" />

    <TextView
        android:id="@+id/tvNowPlaying"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="@dimen/dimens_16dp"
        android:paddingTop="@dimen/dimens_12dp"
        android:paddingRight="@dimen/dimens_16dp"
        android:paddingBottom="@dimen/dimens_12dp"
        android:text="@string/title_now_playing"
        android:textColor="@color/uiBlack"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTopRated" />
</androidx.constraintlayout.widget.ConstraintLayout>